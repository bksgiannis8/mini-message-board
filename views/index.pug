extends layout

block content
  h1= title
  p Welcome to #{title}
  a(href="http://localhost:${process.env.PORT || 3000}/new"): button.compose= "got something to say?" 
  p you have messages 
  ul
    each val in messages 
      p.user= "From:"+" "+ val.user 
      p.text= val.text 
      p.date= "Date:"+" "+val.added 
      br
      br